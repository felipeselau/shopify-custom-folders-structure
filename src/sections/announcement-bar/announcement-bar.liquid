{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{% if section.settings.template == 'all' or template contains section.settings.template %}

  <slider-component class="slider-mobile-gutter">
    <div class="grid grid--1-col {% if section.settings.enable_slider %}slider slider--everywhere{% endif %}"
      id="Slider-{{ section.id }}"
      aria-live="polite"
      aria-atomic="true"
      data-autoplay="{{ section.settings.auto_rotate }}"
      data-speed="{{ section.settings.change_slides_speed }}"
    >
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'announcement' -%}
          <div
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="announcement-bar grid__item {% if section.settings.enable_slider %}slider__slide{% endif %} {% unless block.settings.enable_custom_colors %}color-{{ block.settings.color_scheme }} gradient {% endunless %}"
            role="region"
            aria-label="{{ 'sections.header.announcement' | t }}"
            {{ block.shopify_attributes }}
            {% if block.settings.enable_custom_colors %}
              style="background-color: {{ block.settings.custom_background_color }};"
            {% endif %}
          >
            {%- if block.settings.body != blank -%}
              {%- if block.settings.link != blank -%}
                <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
                {%- endif -%}
                <p class="announcement-bar__message h5"
                  {% if block.settings.enable_custom_colors %}
                    style="color: {{ block.settings.custom_text_color }};"
                  {% endif %}
                >
                  {{ block.settings.body }}
                  {%- if block.settings.link != blank -%}
                    {% render 'icon-arrow' %}
                  {%- endif -%}
                </p>
                {%- if block.settings.link != blank -%}
                </a>
              {%- endif -%}
            {%- endif -%}
          </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    {%- if section.blocks.size > 1 and section.settings.enable_slider -%}
      <div class="slider-buttons no-js-hidden">
        <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
        <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
      </div>
    {%- endif -%}
  </slider-component>
{% endif %}

{% schema %}
  {
    "name": "t:sections.announcement-bar.name",
    "max_blocks": 12,
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_slider",
        "label": "t:sections.announcement-bar.settings.enable_slider.label",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "auto_rotate",
        "label": "t:sections.announcement-bar.settings.auto_rotate.label",
        "default": false
      },
      {
        "type": "range",
        "id": "change_slides_speed",
        "min": 3,
        "max": 9,
        "step": 2,
        "unit": "s",
        "label": "t:sections.announcement-bar.settings.change_slides_speed.label",
        "default": 5
      },
      {
        "type": "select",
        "id": "template",
        "label": "t:sections.announcement-bar.settings.template.label",
        "default": "all",
        "options": [
          {
            "value": "all",
            "label": "t:sections.announcement-bar.settings.template.options__1.label"
          },
          {
            "value": "index",
            "label": "t:sections.announcement-bar.settings.template.options__2.label"
          },
          {
            "value": "product",
            "label": "t:sections.announcement-bar.settings.template.options__3.label"
          },
          {
            "value": "collection",
            "label": "t:sections.announcement-bar.settings.template.options__4.label"
          },
          {
            "value": "cart",
            "label": "t:sections.announcement-bar.settings.template.options__5.label"
          },
          {
            "value": "page",
            "label": "t:sections.announcement-bar.settings.template.options__6.label"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "announcement",
        "name": "t:sections.announcement-bar.blocks.announcement.name",
        "settings": [
          {
            "type": "html",
            "id": "body",
            "label": "t:sections.announcement-bar.blocks.announcement.settings.body.label",
            "default": "Welcome to our store"
          },
          {
            "type": "select",
            "id": "color_scheme",
            "options": [
              {
                "value": "background-1",
                "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__1.label"
              },
              {
                "value": "background-2",
                "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__2.label"
              },
              {
                "value": "inverse",
                "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__3.label"
              },
              {
                "value": "accent-1",
                "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__4.label"
              },
              {
                "value": "accent-2",
                "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__5.label"
              }
            ],
            "default": "accent-1",
            "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.label"
          },
          {
            "type": "checkbox",
            "id": "enable_custom_colors",
            "label": "t:sections.announcement-bar.blocks.announcement.settings.enable_custom_colors.label",
            "info": "t:sections.announcement-bar.blocks.announcement.settings.enable_custom_colors.info",
            "default": false
          },
          {
            "type": "color",
            "id": "custom_text_color",
            "label": "t:sections.announcement-bar.blocks.announcement.settings.custom_text_color.label",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "custom_background_color",
            "label": "t:sections.announcement-bar.blocks.announcement.settings.custom_background_color.label",
            "default": "#000000"
          },
          {
            "type": "url",
            "id": "link",
            "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
          }
        ]
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  }
{% endschema %}
