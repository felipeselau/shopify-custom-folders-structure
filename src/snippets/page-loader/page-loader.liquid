{% if settings.enable_loader %}
  <style>
    #loader-animation {
      position: fixed;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 100;
      background-color: rgba(255, 255, 255, {{ settings.background_opacity | times: 0.01 | default: 0.8 }});
    }
  </style>
    
  <div id="loader-animation">
    {% case settings.animation %}
      {% when 'heart-animation' %}
        {% render 'heart-animation' %}
      {% when 'heart-animation-2' %}
        {% render 'heart-animation-2' %}
      {% when 'heart-animation-3' %}
        {% render 'heart-animation-3' %}
    {% endcase %}
  </div>

  <script>
    window.onbeforeunload = () => {
      const loader = document.querySelector("#loader-animation");
      loader.style.display = "flex";
    }
  </script>
{% endif %}
