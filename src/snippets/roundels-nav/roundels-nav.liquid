      srcset="{%- if image_3.width >= 165 -%}{{ image_3 | img_url: '165x' }} 165w,{%- endif -%}
        {%- if image_3.width >= 275 -%}{{ image_3 | img_url: '275x' }} 275w,{%- endif -%}
        {%- if image_3.width >= 375 -%}{{ image_3 | img_url: '375x' }} 375w,{%- endif -%}
        {%- if image_3.width >= 475 -%}{{ image_3 | img_url: '475x' }} 475w,{%- endif -%}
        {%- if image_3.width >= 540 -%}{{ image_3 | img_url: '540x' }} 540w,{%- endif -%}
        {%- if image_3.width >= 710 -%}{{ image_3 | img_url: '710x' }} 710w,{%- endif -%}
        {%- if image_3.width >= 1420 -%}{{ image_3 | img_url: '1420x' }} 1420w,{%- endif -%}"
      src="{{ image_3 | img_url: 'master' }}"
      sizes="(min-width: 990px) {% if qnty <= 2 %}710px{% else %}550px{% endif %},
        (min-width: 750px) {% if qnty == 1 %}710px{% else %}550px{% endif %},
        calc(100vw - 30px)"
      alt="{{ image_3.alt }}"
